<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:macro name="wheel_front_joint" params="suffix parent xyz rpy">
		<joint name="joint_${suffix}" type="continuous">
			<parent link="${parent}"/>
			<child link="link_${suffix}"/>
			<origin xyz="${xyz}" rpy="${rpy}"/>
			<axis xyz="0 0 1"/>
			<limit effort="1000" velocity="1000"/>
			<!--
			<dynamics damping="0.1" friction="0.0"/>
			-->
		</joint>
		<!--
		<transmission name="trans_${suffix}">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="joint_${suffix}">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="motor_${suffix}">
				<mechanicalReduction>1</mechanicalReduction>
			</actuator>
		</transmission>
		-->
	</xacro:macro>
</robot>
