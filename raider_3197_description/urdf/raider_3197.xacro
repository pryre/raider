		-->
	</link>

	<xacro:wheel_front_joint suffix="wheel_front_left" parent="base_link" xyz="0.175 0.11 -0.05" rpy="${pi/2} ${pi/2} 0" />
	<xacro:wheel_front_link suffix="wheel_front_left" />
	<xacro:wheel_front_joint suffix="wheel_front_right" parent="base_link" xyz="0.175 -0.11 -0.05" rpy="${pi/2} ${pi/2} 0" />
