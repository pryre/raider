		<xacro:frame_motor suffix="motor_1" length="0.024" radius="0.014" color="grey" xyz="0 -0.275 0.027" rpy="0 0 0" />
		<xacro:frame_motor suffix="motor_2" length="0.024" radius="0.014" color="grey" xyz="0 0.275 0.027" rpy="0 0 0" />
		<xacro:frame_motor suffix="motor_3" length="0.024" radius="0.014" color="grey" xyz="0.2382 0.1375 0.027" rpy="0 0 0" />
		<xacro:frame_motor suffix="motor_4" length="0.024" radius="0.014" color="grey" xyz="-0.2382 -0.1375 0.027" rpy="0 0 0" />
