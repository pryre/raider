		<xacro:frame_servo suffix="servo_shoulder" size="0.0285 0.034 0.0465" color="black" xyz="0.01425 0.019 -0.015" rpy="${-pi/2} 0 ${pi}" />

		<xacro:frame_arm suffix="arm_1" length="0.17" radius="0.015" color="white" xyz="0 -0.19 0" rpy="${pi/2} 0 0" />
