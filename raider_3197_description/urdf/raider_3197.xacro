		<xacro:frame_motor suffix="motor_6" length="0.024" radius="0.014" color="grey" xyz="-0.2382 0.1375 0.027" rpy="0 0 0" />

		<xacro:frame_skid suffix="skid_1" length="0.12" radius="0.008" color="white" xyz="0 -0.275 -0.075" rpy="0 0 0" />
		<xacro:frame_skid suffix="skid_2" length="0.12" radius="0.008" color="white" xyz="0 0.275 -0.075" rpy="0 0 0" />
		<xacro:frame_skid suffix="skid_3" length="0.12" radius="0.008" color="white" xyz="0.2382 0.1375 -0.075" rpy="0 0 0" />
