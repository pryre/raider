<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:macro name="wheel_rear_link" params="suffix">

		<link name="link_${suffix}">
			<inertial name='inertial_${suffix}'>>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<mass value="0.1" />
				<inertia ixx="0.000026" iyy="0.000026" izz="0.0015" ixy="0.0" ixz="0.0" iyz="0.0" />
			</inertial>

			<collision name='collision_${suffix}'>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry>
					<cylinder radius="0.03" length="0.03"/>
				</geometry>
			</collision>

			<visual name="visual_${suffix}">
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry>
					<cylinder radius="0.03" length="0.03"/>
					<!--
					<mesh filename="package://mantis_description/meshes/FR12-H101.stl" scale="0.001 0.001 0.001"/>
					-->
				</geometry>
				<material name="black"/>
			</visual>
		</link>

		<gazebo reference="link_${suffix}">
			<mu1>0.2</mu1>
			<mu2>0.2</mu2>
			<material>Gazebo/Black</material>
		</gazebo>
	</xacro:macro>
</robot>
